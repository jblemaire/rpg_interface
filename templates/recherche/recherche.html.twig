{% extends "base.html.twig" %}

 {% block stylesheets %}
    <style>
        body{
            perspective: 1px;
            transform-style: preserve-3d;
            overflow-x: hidden;
            overflow-y: auto;
        }

        p{
            font-size:1.2em;
        }
    </style>
 {% endblock %}


{% block body %}
    <main class=" w-50 mx-auto " >
        <!-- Block Recherche -->
        <div class="container my-5">
            <div class="row justify-content-center "  >
                 <div class="col-12 mx-auto" >
                     <div class="input-group input-group-lg">
                         <select class="js-example-basic-multiple form-control"
                                 name="states[]"
                                 placeholder="Search by tag, here"
                                 multiple="multiple"

                         >

                         </select>
                     </div>
                     <button class="form-control btn-primary w-25 mt-2 mx-auto" type="button">Search</button>
                 </div>
            </div>
        </div>




    </main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/bootstrap/jquery-3.4.0.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap/bootstrap.js') }}"></script>
    <script src="{{ asset('js/bootstrap/mdb.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.js-example-basic-multiple').select2({
                placeholder: "Search by tag, here",
                allowClear: true
            });
        });
    </script>
{% endblock %}